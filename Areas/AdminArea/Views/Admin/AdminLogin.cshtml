    <!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>52Hz | Admin </title>

    <!-- Bootstrap -->
    <link href="~/Areas/AdminArea/css/bootstrap.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Areas/AdminArea/css/font-awesome.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Areas/AdminArea/css/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Areas/AdminArea/css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/Areas/AdminArea/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                    <h1>Đăng nhập Admin 52Hz @ViewData["LoiDangNhap"]</h1>
                        <div>
                            <input type="text" class="form-control" placeholder="Username" required="" name="username"/>
                            
                        </div>
                        <div>
                            <input type="password" class="form-control" placeholder="Password" required="" name="password"  />
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="@Url.Action("Index", "Admin")">Log in</a>
                            <a class="reset_pass" href="#">Lost your password?</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                            <p class="change_link">
                                New to site?
                                <a href="" class="to_register"> Create Account </a>
                            </p>

                            <div class="clearfix"></div>
                            <br />


                        </div>
                    }
                </section>
            </div>

        </div>
    </div>
</body>
</html>
